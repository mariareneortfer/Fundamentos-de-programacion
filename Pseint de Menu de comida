Algoritmo Menu
	suma <- 0
	Repetir
		Escribir "MENU"
		Escribir "1. Hamburguesa (3Bs)"
		Escribir "2. Hamburguesa con queso (5Bs)"
		Escribir "3. Papas fritas (2Bs)"
		Escribir "4. Soda (2.5Bs)"
		Escribir "0. Salir"
		Escribir "Ingrese una opcion: "
		precio <- 0
		Leer opcion
		Segun opcion Hacer
			1:
				precio <- 3
			2:
				precio <- 5
			3:
				precio <- 2
			4:
				precio <- 2.5
			0:
				Escribir "Salir"
			De Otro Modo:
				Escribir "Error"
		FinSegun
		Si precio>0 Entonces
			Escribir "Ingrese la cantidad: "
			Leer cantidad
			ingreso <- cantidad*precio
			suma <- suma+ingreso
		FinSi
	Hasta Que opcion =0
	Escribir "Monto total a pagar es: ", suma
FinAlgoritmo
